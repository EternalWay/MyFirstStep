            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#dfe2e4" height="100.0" stroke="BLACK" strokeType="INSIDE" width="289.0" />
                    <Text fx:id="output" />
               </children>
            </StackPane>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#procNum" prefHeight="50.0" prefWidth="50.0" text="7" />
                  <Button mnemonicParsing="false" onAction="#procNum" prefHeight="50.0" prefWidth="50.0" text="8" />
